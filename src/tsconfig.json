{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "removeComments": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "noLib": false,
    "noEmitHelpers": true,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "noEmitOnError": false,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noImplicitUseStrict": false,
    "noFallthroughCasesInSwitch": true,
    "lib": ["es6", "dom"],
    "baseUrl": ".",
    "paths": {
      "*": ["./node_modules/tns-core-modules/*", "./node_modules/*"]
    }
  },
  "compileOnSave": false,
  "files": ["gif.common.ts", "gif.android.ts", "gif.ios.ts"],

  "exclude": ["node_modules", "demo/node_modules", "platforms"]
}
